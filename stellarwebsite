    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const video = document.getElementById('background-video');
            
            // Try to play the video with sound on page load
            const playVideo = () => {
                video.muted = false;
                video.play().catch((error) => {
                    // If autoplay with sound fails, mute and play
                    video.muted = false;
                    video.play();
                });
            };
            
            // Attempt to simulate a user interaction
            window.addEventListener('click', playVideo, { once: true });
            
            // Alternatively, try to play on touch events (for mobile)
            window.addEventListener('touchstart', playVideo, { once: true });

            // Also try to play on page visibility change
            document.addEventListener('visibilitychange', () => {
                if (document.visibilityState === 'visible') {
                    playVideo();
                }
            });
        });
    </script>
